.banner-custom{
 width: 100%;
    max-width: 1440px;
    margin: 0 auto;
    min-height: 780px;
    background-image: url({{'Frame.svg' | asset_url}}), url({{'Frame.svg' | asset_url}});
    background-position: left 0 top -165px, right -550px bottom -145px;
    background-repeat: no-repeat, no-repeat;
    background-size: 100% auto, 100% auto;
    font-family: "Jost", sans-serif;
}

.banner-inner h1{
  color: #000000;
  text-align: left;
  font-family: "Jost-Medium", sans-serif;
  font-size: 70px;
  line-height: 100%;
  font-weight: 500;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: flex-start;
}

.banner-inner p{
  color: #000000;
  text-align: left;
  font-family: "Jost-Regular", sans-serif;
  font-size: 20px;
  line-height: 140%;
  font-weight: 400;
  position: relative;
  height: 84px;
  display: flex;
  align-items: center;
  justify-content: flex-start;
}